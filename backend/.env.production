# Configuración de Base de Datos para Railway
# Estas variables serán configuradas en Railway Dashboard
DB_HOST=${{MYSQLHOST}}
DB_PORT=${{MYSQLPORT}}
DB_USER=${{MYSQLUSER}}
DB_PASSWORD=${{MYSQLPASSWORD}}
DB_NAME=${{MYSQLDATABASE}}

# JWT Configuration
JWT_SECRET=${{JWT_SECRET}}
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=${{PORT}}
NODE_ENV=production

# CORS Configuration - URL de Vercel
FRONTEND_URL=${{FRONTEND_URL}}

# Railway Database URL (alternativa)
DATABASE_URL=${{DATABASE_URL}}