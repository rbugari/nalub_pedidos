# Configuración para Testing con Base de Datos Localhost
# Esta configuración se usa durante la fase de testing en Railway

# Base de Datos Localhost (para testing)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=nalub_pedidos

# JWT Configuration
JWT_SECRET=your-test-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3000
NODE_ENV=test

# CORS Configuration - Para testing local
FRONTEND_URL=http://localhost:5173

# Database URL para testing
DATABASE_URL=mysql://root:@localhost:3306/nalub_pedidos

# Railway Testing Variables (cuando se conecte a localhost desde Railway)
# Estas se configurarán en Railway Dashboard para la fase de testing
RAILWAY_DB_HOST=host.docker.internal
RAILWAY_DB_PORT=3306
RAILWAY_DB_USER=root
RAILWAY_DB_PASSWORD=
RAILWAY_DB_NAME=nalub_pedidos